<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zbie.androiddynamicload_plugin.MainActivity">

    <ImageView
        android:id="@+id/iv_portrait"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/portrait"/>

    <ImageView
        android:id="@+id/iv_wechat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_portrait"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/wechat"/>

    <TextView
        android:id="@+id/tv_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:text="Portrait"
        app:layout_constraintLeft_toLeftOf="@+id/iv_portrait"
        app:layout_constraintRight_toRightOf="@+id/iv_portrait"
        app:layout_constraintTop_toBottomOf="@+id/iv_portrait"/>

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:text="Wechat"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wechat"
        app:layout_constraintRight_toRightOf="@+id/iv_wechat"
        app:layout_constraintTop_toBottomOf="@+id/iv_wechat"/>
</android.support.constraint.ConstraintLayout>
