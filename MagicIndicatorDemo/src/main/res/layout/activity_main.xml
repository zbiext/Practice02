<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:background="#d43d3d"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="#00c853"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="#455a64"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="#455a64"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator6"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="#FAFAFA"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator9"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigator_common_height"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>

                <com.zbie.magicindicatordemo.lib.MagicIndicator
                    android:id="@+id/magic_indicator12"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/navigator_margin"
                    android:background="@android:color/white"/>
            </LinearLayout>
            <View
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/navigator_margin"
            android:background="@android:color/white"/>

        <com.zbie.magicindicatordemo.lib.MagicIndicator
            android:id="@+id/magic_indicator11"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navigator_common_height"
            android:layout_gravity="bottom|center_horizontal"/>

    </FrameLayout>

</LinearLayout>
